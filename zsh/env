#!/usr/bin/env zsh

export EDITOR='nv'
export LESS='iR'
export PAGER='less --file-size'
export XDG_CONFIG_HOME="$HOME/.config"

# tms
export TMS_CONFIG_FILE="$XDG_CONFIG_HOME/tms/config.toml"

# man
export MANCOLOR=1
export MANPAGER='less -cs --file-size'
export MANPATH=":/opt/homebrew/share/man$MANPATH"

# PATH updates
export PATH="$HOME/.local/bin:$PATH" # user binaries
export PATH="$(brew --prefix git)/share/git-core/contrib/diff-highlight:$PATH" # diff-highlight

# zsh-autosuggestions
export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=#88898a'

# fzf
export FZF_DEFAULT_OPTS="--style=full --layout=reverse --exact --scheme=path"

# starship
export STARSHIP_CONFIG="$XDG_CONFIG_HOME/starship/starship.toml"
