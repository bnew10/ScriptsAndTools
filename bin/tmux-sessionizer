#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
elif [[ $# -eq 2 ]]; then
    selected=$1
    name=$2
else
    search_dirs=(~ ~/repos ~/repos/work ~/.config)
    selected=$(fd --unrestricted --format='{//}' --exact-depth=2 --type=d --glob '.git' "${search_dirs[@]}" | fzf --style=full --tmux=20% --delimiter='/' --with-nth=-1)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

if ! tmux has-session -t "$selected_name" 2>/dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected"
    if [[ -e $selected/.tmux-setup ]]; then
        tmux send-keys -t "$selected_name:1" "./.tmux-setup; clear" "Enter"
    fi
fi

tmux switch-client -t "$selected_name"
